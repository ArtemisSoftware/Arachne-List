<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.home.HomeFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arachne_lists"
        app:layout_constraintBottom_toTopOf="@+id/btn_simple_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_simple_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple RecyclerView"
        app:layout_constraintBottom_toTopOf="@+id/btn_list_adapter"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_list_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListAdapter"
        app:layout_constraintBottom_toTopOf="@+id/btn_multiple_adapter"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/btn_simple_recycler" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_multiple_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiple Adapter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/btn_list_adapter" />

</androidx.constraintlayout.widget.ConstraintLayout>